  if [ -z "${DEBUG-}" ]; then
    # make sure it doesn't fail
    git status -s &>/dev/null
    if [ ! "$(git status -s | wc -l)" = "0" ]; then
      echo "Working dir dirty!" >&2
      exit 1
    fi 
    git rev-parse HEAD >"$SINGULARITY_ROOTFS/commit"
  fi


